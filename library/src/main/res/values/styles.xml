<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CFDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/CFDialogStyle.Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="CFDialogStyle.Title">
        <item name="android:textSize">@dimen/crowdfire_dialog_title_font_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CFDialogStyle.Message">
        <item name="android:textSize">@dimen/crowdfire_dialog_description_font_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/crowdfire_dialog_padding</item>
        <item name="android:layout_marginTop">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:layout_marginRight">@dimen/crowdfire_dialog_padding</item>
        <item name="android:layout_marginBottom">@dimen/crowdfire_dialog_padding_half</item>
    </style>

    <style name="CFDialogStyle.Animation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom_exit</item>
    </style>

    <style name="CFDialogStyle.ContentImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/crowdfire_dialog_imageview_top_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CFDialogStyle.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/crowdfire_dialog_button_text_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <style name="CFDialogStyle.IconImage">
        <item name="android:layout_width">@dimen/crowdfire_dialog_icon_dimen</item>
        <item name="android:layout_height">@dimen/crowdfire_dialog_icon_dimen</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/cfdialog_default_button_background_drawable</item>
    </style>

    <style name="CFDialogStyle.SelectableItemTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/crowdfire_dialog_padding</item>
        <item name="android:layout_marginRight">@dimen/crowdfire_dialog_padding</item>
        <item name="android:layout_marginTop">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:layout_marginBottom">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CFDialogStyle.MultiSelectItemCheckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:paddingBottom">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/crowdfire_dialog_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CFDialogStyle.SingleSelectItemRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/crowdfire_dialog_padding</item>
        <item name="android:paddingTop">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:paddingBottom">@dimen/crowdfire_dialog_padding_half</item>
        <item name="android:buttonTint" tools:targetApi="21">?android:attr/colorAccent</item>
    </style>

</resources>
