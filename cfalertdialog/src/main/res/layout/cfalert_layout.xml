<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/cfdialog_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cfdialog_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_margin="@dimen/cfdialog_outer_margin"
        android:clipChildren="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPaddingBottom="@dimen/cfdialog_footer_top_margin_half"
        app:contentPaddingTop="@dimen/cfdialog_header_bottom_margin_half">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <!-- Header view container -->
                <LinearLayout
                    android:id="@+id/alert_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" />

                <!--Title and icon-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/icon_title_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cfdialog_padding_half"
                        android:layout_marginLeft="@dimen/cfdialog_padding"
                        android:layout_marginRight="@dimen/cfdialog_padding"
                        android:layout_marginTop="@dimen/cfdialog_padding_half"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cfdialog_icon_imageview"
                            style="@style/CFDialog.IconImage" />

                        <TextView
                            android:id="@+id/tv_dialog_title"
                            style="@style/CFDialog.Title"
                            tools:text="This is your title" />
                    </LinearLayout>

                </LinearLayout>

                <!--Message-->
                <TextView
                    android:id="@+id/tv_dialog_content_desc"
                    style="@style/CFDialog.Message"
                    tools:text="This is your description"
                    android:animateLayoutChanges="true" />

                <!--Selection items-->
                <LinearLayout
                    android:id="@+id/alert_selection_items_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <include layout="@layout/cfdialog_selectable_item_layout" />

                    <include layout="@layout/cfdialog_multi_select_item_layout" />

                    <include layout="@layout/cfdialog_single_select_item_layout" />

                </LinearLayout>

                <!--buttons-->
                <LinearLayout
                    android:id="@+id/alert_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cfdialog_padding_half"
                    android:layout_marginRight="@dimen/cfdialog_padding_half"
                    android:layout_marginBottom="@dimen/cfdialog_padding_half"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                </LinearLayout>

                <!-- Footer view container -->
                <LinearLayout
                    android:id="@+id/alert_footer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>
</RelativeLayout>
